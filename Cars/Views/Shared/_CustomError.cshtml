@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = "View Order";   

}
<div class="wrapper vh-100">
    <div class="align-items-center h-100 d-flex w-50 mx-auto">
        <div class="mx-auto text-center">
            <h1 class="display-1 m-0 font-weight-bolder text-muted" style="font-size:80px;">@localizer["Error"]</h1>
            <h3 class="mb-1 text-muted font-weight-bold">@localizer["ErrorOccurred"] </h3>
            @*<h6 class="mb-3 text-muted">The page could not be found. </h6>*@
            <a href="/" class="btn btn-lg btn-primary px-5">@localizer["BackToHomepage"]</a>
        </div>
    </div>
</div>