@model Cars.ViewModels.PricingAddOrderLineViewModel

@if (ViewBag.ErrorMessage != null)
{
    <div class="card">
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
    </div>
}
<div class="card shadow mb-4">
    <div class="card-header">
        <strong class="card-title">Add Order Line</strong>
    </div>

    <form class="needs-validation" asp-action="AddOrderLine" asp-controller="Pricing" method="post">
        <div class="card-body">
            <div class="row">
                <input asp-for="ParentOrderDetailsId" type="hidden" />
                <input type="hidden" asp-for="Items">
                <input type="hidden" asp-for="Quantity">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label for="simpleinput">Item</label>
                        <input type="text" value="@Model.Items" class="form-control" disabled>
                        <span asp-validation-for="Items" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label for="example-email">Price</label>
                        <input asp-for="Price" class="form-control"  min="1">
                        <span asp-validation-for="Price"  class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label for="example-helping">Quantity</label>
                        <input value="@Model.Quantity" class="form-control" disabled>
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="example-readonly">Location</label>
                        <select asp-for="VendorLocationID" asp-items="@Model.VendorLocations" class="form-control" required>
                            <option>- Select -</option>
                        </select>
                        <span asp-validation-for="VendorLocationID" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label for="example-disable">Type</label>
                        <select asp-for="TypeID" asp-items="@Model.OrderDetailsTypes" class="form-control" required>
                            <option>- Select -</option>
                        </select>
                        <span asp-validation-for="TypeID" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label for="example-helping">Part Number</label>
                        <input asp-for="PartNumber" class="form-control" required>
                        <span asp-validation-for="PartNumber" class="text-danger"></span>
                    </div>
                </div>

            </div>


            <div class="row">
                <div class="col-md-10">
                    <label for="example-readonly">Comment</label>
                    <div class="col-sm-9">
                        <textarea class="form-control" asp-for="Comments" rows="3"></textarea>

                    </div>
                    <span asp-validation-for="Comments" class="text-danger"></span>
                </div>

            </div>

            <button class="btn btn-primary" type="submit" style="margin:10px">Add</button>
        </div>
    </form>
</div>