@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h3 class="ml-3">Edit User</h3>

<form method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mr-0 ml-3">

        <div class="form-group" style="display:none">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control">
            </div>
        </div>
        <div class="form-group col-sm-4 mr-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="SeconedName"></label>
            <input asp-for="SeconedName" class="form-control" />
            <span asp-validation-for="SeconedName" class="text-danger"></span>
        </div>

        <div class="form-group col-sm-4 mr-3">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group col-sm-4 mr-3">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group col-sm-4">
            <label>Role</label>
            <select asp-for="Role" class="form-control" asp-items="ViewBag.roles"></select>

        </div>






        <div class="form-group col-sm-12">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="ListUsers" class="btn btn-primary">Cancel</a>
            </div>
        </div>


    </div>
</form>
@section Scripts {
    <script>
        ChangeColorSidebarItem("", "aAdministration");
    </script>

}